    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Timer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "PERSIST_METHOD": "redis",
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379",
                "REDIS_DB": "0",
                "API_SERVER_INTERNAL_URL": "http://localhost:9502",
                "POSTGRES_HOST": "localhost",
                "POSTGRES_PORT": "5432",
                "POSTGRES_DB": "game",
                "POSTGRES_USER": "game",
                "POSTGRES_PASSWORD": "game",
                "LOG_LEVEL": "info",
            }
        }
    ]
}