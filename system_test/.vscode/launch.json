    "version": "0.2.0",
    "configurations": [
        {
            "name": "System Test",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "PERSIST_METHOD": "redis",
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379",
                "REDIS_DB": "0",
                "API_SERVER_URL": "http://localhost:9501"
            },
            "args": [
                "--config",
                "config.yaml",
                "--game-server-dir=../server",
                "--botrunner-dir=../botrunner"
            ]
        }
    ]
}