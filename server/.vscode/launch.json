  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "PERSIST_METHOD": "redis",
        "REDIS_HOST": "localhost",
        "REDIS_PORT": "6379",
        "REDIS_DB": "0",
        "API_SERVER_URL": "http://localhost:9501",
        "DISABLE_DELAYS": "1"
      },
      "args": ["--script-tests"]
    },
    {
      "name": "Launch Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "PERSIST_METHOD": "redis",
        "REDIS_HOST": "localhost",
        "REDIS_PORT": "6379",
        "REDIS_DB": "0",
        "API_SERVER_URL": "http://localhost:9501",
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5432",
        "POSTGRES_DB": "game",
        "POSTGRES_USER": "game",
        "POSTGRES_PASSWORD": "game"
      },
      "args": ["--server"]
    },
    {
      "name": "Launch Bot",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "PERSIST_METHOD": "redis",
        "REDIS_HOST": "localhost",
        "REDIS_PORT": "6379",
        "REDIS_DB": "0"
      },
      "args": ["--bot"]
    }         
  ]
}