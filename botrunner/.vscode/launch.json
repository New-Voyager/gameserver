  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch BotRunner",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/botrunner/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "API_SERVER_URL": "http://localhost:9501",
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5432",
        "POSTGRES_USER": "game",
        "POSTGRES_PASSWORD": "game",
        "POSTGRES_DB": "game",
        "PRINT_GAME_MSG": "false",
        "PRINT_HAND_MSG": "false"
      },
      "args": [
        "-script",
        // "botrunner_scripts/system_test/river-action-3-bots-seat-change.yaml"
        "botrunner_scripts/system_test/river-action-3-bots.yaml"
      ]
    },
    {
      "name": "Launch Tester (Console input doesn't work)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/tester/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "API_SERVER_URL": "http://localhost:9501",
        "PRINT_GAME_MSG": "false",
        "PRINT_HAND_MSG": "false"
      },
      "args": [
        "--config",
        "botrunner_scripts/river-action-2-bots-1-human.yaml",
        "--game-code",
        "REPLACE_ME_WITH_THE_REAL_CODE"
      ]
    },
    {
      "name": "Launch Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/server/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "API_SERVER_URL": "http://localhost:9501",
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5432",
        "POSTGRES_USER": "game",
        "POSTGRES_PASSWORD": "game",
        "POSTGRES_DB": "game",
        "PRINT_GAME_MSG": "false",
        "PRINT_HAND_MSG": "false"
      },
      "args": []
    }
  ]
}